.b-tabs.j-tabs
    ul.b-tabs__list
        li.b-tabs__item
            a(href="#tab-1").p-tabs__btn
                span.b-tabs__btn-text
                    | Продаваемая информация
                .pkp-tooltip.pkp-tooltip_inline
                        span(title="выплаты агенту" data-position="top" data-theme="g-hint").pkp-tooltip__trigger.j-hint
                            | ?
        li.b-tabs__item
            a(href="#tab-2").p-tabs__btn 
                span.b-tabs__btn-text
                    | Продаваемый файл
                .pkp-tooltip.pkp-tooltip_inline
                        span(title="выплаты агенту" data-position="top" data-theme="g-hint").pkp-tooltip__trigger.j-hint
                            | ?
    div.p-tabs__container
        .p-tabs__content#tab-1
            .b-selling-info
                .b-selling-info__row
                    label.b-label
                        span.b-label__text.m-label__text_required
