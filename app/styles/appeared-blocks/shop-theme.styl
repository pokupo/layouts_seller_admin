//shop-theme popup
.b-shop-theme
    width 1000px
    background #fff
    position relative
    padding 15px 40px 38px
    overflow hidden

.b-shop-theme__content
    margin-top 8px
    position relative
    overflow hidden
    .m-btn_theme
        position absolute
        top auto
        bottom 4px
        left 700px

.b-shop-theme__preview
    float left
    border 4px solid #efece7
    box-shadow 0 0 0 1px #f3f3f3
    
.b-shop-theme__info
    float left
    padding-top 8px
    max-width 260px
    margin 0 0 75px 30px
    strong
        font-weight 700
        font-size 14px
        color #000
    ul
        margin-top 5px
        margin-bottom 25px
        li
            line-height 18px
            margin-bottom 2px
            color #000
            font-size 14px
            position relative
            &:before
                content ''
                position absolute
                left -7px
                top 7px
                border 1px solid #000
                border-radius 10px
    p
        font-size 13px 
        font-weight 500
        color #000
        letter-spacing 0.2px
        line-height 20px
    