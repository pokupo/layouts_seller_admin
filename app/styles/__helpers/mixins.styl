btn()
	position relative
	margin-right 10px
	display inline-block
	width 40px
	height 40px
	cursor pointer
	background #fff
	border 1px solid #ddd8d0
	border-radius 5px
	&:hover
		border-color #ebe8e3
		background #ebe8e3
 
background-icon($icon)
	background url($icon[8]) $icon[2] $icon[3]
	width $icon[4]
	height $icon[5]
			

fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)


clearfix()
	&:before,
	&:after
		content ''
		display table
	&:after
		clear both

text-hide()
	overflow: hidden
	text-indent -9999em

pseudo()
	content ''
	position absolute

pseudo__center()
	content ''
	display block
	position absolute
	left 50%
	top 50%

centered-icon($icon)
	&:after
		pseudo__center()
		sprite($icon)
		margin-left -(spriteWidth($icon)/2)
		margin-top -(spriteHeight($icon)/2)

any-icon($icon)
	&:after
		pseudo()
		sprite($icon)


drop-shadow()
	background-color #fff
	border-bottom 1px solid #e2e2e2
	box-shadow 0 4px 8px rgba(0,0,0,0.3)
	padding-bottom 2px

	&:before
	&:after
		content ''
		position absolute
		display block
		left 0
		right 0

	&:before
		height 2px
		background #dcdcdc
		border-top 1px solid #d6d6d6
		bottom 0
		z-index 0

	&:after
		height 50px
		bottom -1px
		box-shadow 0 10px 20px -7px rgba(0,0,0,0.3)
		z-index -1	
		
half(value)
	floor(value / 2)

sprite2xWidth($sprite)
	width half($sprite[4])

sprite2xHeight($sprite)
	height half($sprite[5])

sprite2xImage($sprite)
	background-image url($sprite[8])
	background-repeat no-repeat

sprite2xPosition($sprite)
	background-position half($sprite[2]) half($sprite[3]);

sprite2xSize($sprite)
	background-size half($sprite[6]) half($sprite[7])

sprite2x($sprite)
	sprite2xWidth($sprite)
	sprite2xHeight($sprite)
	sprite2xImage($sprite)
	sprite2xPosition($sprite)
	sprite2xSize($sprite)		