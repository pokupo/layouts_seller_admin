//goods search
    .b-goods-search
        background #efece7
        margin 0 0 20px 0
        padding 13px 20px 20px 20px
        position relative
    
    .b-goods-search__overlay
        position absolute
        height 100%
        z-index 10
        top 0
        width 0
    .m-goods-search__overlay_left
        left 0
        background linear-gradient(to left, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 21%,rgba(255,255,255,1) 60%,rgba(255,255,255,1) 79%)
    .m-goods-search__overlay_right
        right 0
        background linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 21%,rgba(255,255,255,1) 60%,rgba(255,255,255,1) 79%)

    .b-goods-search__title
        font-size 30px
        font-weight 300
        position relative
        color #000
        padding 0 30px
        display inline-block
        text-decoration none
        &:hover
            color #177a93
            &:after
                background-icon ($arrow-down_hover)
        &:before
            pseudo()
            background-icon ($search)
            left 4px
            top 9px
        &:after
            pseudo()
            background-icon ($arrow-down)
            right 6px
            top 15px
    
    .b-goods-search__form
        margin 25px 0 0 3px
    
    .b-goods-search__filter
        display table
        width 100%
        margin-bottom -5px

    .b-goods-search__input-holder
        overflow hidden
        padding-right 20px

    .b-goods-search__filter-holder
        float right
    
    .b-goods-search__select
        width 222px
        
    .b-goods-search__goods-status
        float left

    .b-goods-type
        float right
        margin-left 18px

    .b-goods-type__label
        cursor pointer
        display inline-block
        color #333333
        letter-spacing 0.6px
        margin -2px 0 0 3px
        
    .b-goods-type__input
        position absolute 
        overflow hidden 
        clip rect(0 0 0 0) 
        height 1px 
        width 1px 
        margin -1px 
        padding 0
        border 0
        &:checked + .b-goods-type__span
            background #97ce68
            border 1px solid #97ce68
            color #fff
        &:checked + .m-goods-type__span_physical:before
            background-icon($input-physical)
        &:checked + .m-goods-type__span_digital:before
            background-icon($input-digital_checked)
    
    .b-goods-type__span
        padding 0 9px
        line-height 38px
        display block
        border 1px solid #ddd8d0
        border-radius 5px
        position relative
    .m-goods-type__span_physical
        padding-left 44px
        &:before
            pseudo()
            background-icon($input-physical_checked)
            left 9px
            top 6px
    .m-goods-type__span_digital
        padding-left 44px
        &:before
            pseudo()
            background-icon($input-digital)
            left 9px
            top 6px       

    .b-goods-search__controls
        float right
        padding 21px 0
        
    .b-goods-search__controls-reset
        position relative
        display inline-block
        width 40px
        height 40px
        cursor pointer
        background #efece7
        border 1px solid #ddd8d0
        border-radius 5px
        margin-left 10px
        &:hover
            background #fff
        centered-icon($remove_big)
        & input
            display none
            
    .b-goods-search__controls-submit
        border none
        text-transform uppercase
        font-size 14px
        font-weight 600
        float left
        padding 10px 56px
        margin-left 20px
        background #97ce68
        border-radius 6px
        cursor pointer
        &:hover
            opacity 0.9
      
//b-add-goods
    .b-add-goods
        margin-top -13px
    .b-add-goods__item
        width 82px
        height 82px
        border 2px dotted #a9a7a4
        display inline-block
        margin-left 7px
        position relative
        cursor pointer
        &:hover
            background #f5f3f1
    .m-add-goods__item_real
        centered-icon($load-real-goods)
        &:hover
            centered-icon($load-real-goods_hover)
            
    .m-add-goods__item_digital
        centered-icon($load-digital-goods)
        &:hover
            centered-icon($load-digital-goods_hover)
    .m-add-goods__item_import
        centered-icon($import-goods)
        &:hover
            centered-icon($import-goods_hover)
    
    .b-add-goods__item input
        display none