.pkp-tooltip
    position relative
    width 20px
    &_inline
        display inline-block
        margin-left 4px
    &_outer
        position absolute
        top 50%
        right -30px
        margin-top -10px
.pkp-tooltip__trigger
    width 20px
    height 20px
    border 1px solid #7caa1f
    display inline-block
    border-radius 999px
    color #7caa1f
    font 10px 'Open Sans', Arial, sans-serif
    font-weight 700
    text-align center
    line-height 18px
    cursor pointer
    vertical-align middle

.pkp-tooltip:hover .pkp-tooltip__trigger
    color #fff
    background #7caa1f

.pkp-tooltip__content
    pointer-events none
    position absolute
    width 495px
    padding 20px 20px
    background #fff
    box-shadow 0 2px 8px 0 rgba(0,0,0,.5)
    top 28px
    right -21px
    font 13px 'Open Sans', Arial, sans-serif
    font-weight 400
    opacity 0
    -webkit-transform translate(35px) rotate(25deg) scale(1.5)
    -moz-transform translate(35px) rotate(25deg) scale(1.5)
    -o-transform translate(35px) rotate(25deg) scale(1.5)
    -ms-transform translate(35px) rotate(25deg) scale(1.5)
    transform translate(35px) rotate(25deg) scale(1.5)
    -webkit-transition all 0.3s ease-in-out
    -moz-transition all 0.3s ease-in-out
    -o-transition all 0.3s ease-in-out
    -ms-transition all 0.3s ease-in-out
    transition all 0.3s ease-in-out
    z-index 99
    text-align left

.pkp-tooltip__content:after
    content ''
    width 20px
    height 12px
    background-repeat no-repeat
    background-image url('data:image/png;base64,');
    position absolute
    top -12px
    right 21px

.pkp-tooltip__content_left
    left -21px

.pkp-tooltip__content_left:after
    left 21px

.pkp-tooltip__content_center_comments
    width 460px
    right -300px

.pkp-tooltip__content_center_comments:after
    right 300px

.pkp-tooltip:hover .pkp-tooltip__content
    opacity 1
    -webkit-transform translate(0px) rotate(0deg) scale(1)
    -moz-transform translate(0px) rotate(0deg) scale(1)
    -o-transform translate(0px) rotate(0deg) scale(1)
    -ms-transform translate(0px) rotate(0deg) scale(1)
    transform translate(0px) rotate(0deg) scale(1)
    pointer-events auto
    transition all 0.3s ease-in-out

.pkp-tooltip__title
    font 13px 'Open Sans', Arial, sans-serif
    font-weight 700
    margin 0 0 20px 0

.pkp-tooltip__content a
    color #177a93
    text-decoration none

.pkp-tooltip__content a:hover
    text-decoration underline

.pkp-tooltip__content p
    margin 5px 0 0 0
