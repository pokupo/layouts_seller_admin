//store-code
    .b-code
        margin-top 10px
        &:last-child
            .b-code__content
                margin-bottom 0
                    
    .b-code .b-block-subtitle
        float left
        margin-right 18px
        
    .b-code__roll-up
        color: #177a93
        font-size 14px
        font-weight 700
        cursor pointer
        border-bottom 1px dotted #177a93
        line-height: 23px;
        &:hover
            border-bottom none
        
    .b-code__content
        background #f5f5f5
        box-shadow inset 0 0 0 1px #d4d4d4
        height 200px
        margin 14px 0 10px 0
        clear both
        overflow hidden
        transition height 0.4s
        margin-bottom 32px

    .m-code__content_hidden
        height 0
        margin-bottom 13px 

    .b-code__inner
        padding 14px 21px
        
    .b-code__content pre
        color #333333
        font-size 13px
        line-height 20px
        letter-spacing 0.3px
        
    .b-code__copy
        float right
        text-transform uppercase
        color #000
        background #fff
        border 1px solid #ddd8d0
        text-decoration none
        font-weight 600
        border-radius 5px
        padding 13px 19px 13px 43px
        margin-top -13px
        letter-spacing -0.2px
        position relative
        any-icon($copy--code)
        &:after
            top 11px
            left 20px