//rubricator
.b-rubricator
    margin-top 9px
    margin-bottom 20px
        
.b-rubricator__header
    background #ebe8e3
    overflow hidden

.b-rubricator__header-cell
    float left
    font-size 13px
    font-weight 700
    color #000
    height 50px
    line-height 50px
    &:nth-child(1)
        width 40px
    &:nth-child(2)
        width 62.5%
        padding-left 36px
        padding-right 20px
    &:nth-child(3)
        width 19.5%
        padding-left 6px
        padding-right 20px
    &:nth-child(4)
        padding-left 5px
            

.b-rubricator__content
    background #fff
    border-top 1px solid #ccc

    ul
        padding-left 0

        li:not(.p-parent-item)
            .b-catalog-tree__text
                color #177a93
                font-weight 500
                font-size 14px
        .b-catalog-tree__text
            line-height 39px
            margin-top -7px
            display inline-block

.b-rubricator__main > .b-rubricator__row .p-toggle-tree
    display none

.b-rubricator__root
    .b-ckeckbox__text
        padding-left 25px
    .m-ckeckbox__text-icon_catalog_novelty
        margin-left -21px
    .m-ckeckbox__text-icon_catalog_hot
        margin-left -23px
        margin-right 12px
    .m-ckeckbox__text-icon_catalog_recommended
        margin-left -27px
        margin-right 7px
        
    ul
        .b-ckeckbox__text
            padding-left 45px
            .b-catalog-tree__text
                font-size 14px
        ul
            .b-ckeckbox__text
                padding-left 65px
            ul
                .b-ckeckbox__text
                    padding-left 85px
                ul
                    .b-ckeckbox__text
                        padding-left 105px
                        ul
                            .b-ckeckbox__text
                                padding-left 125px

.b-rubricator__row
    border 1px solid #ccc
    border-top none
    height 39px
    padding-top 7px
    transition all .4s
    cursor pointer
    &:hover
        background #f5f3f1
        .b-checkbox .b-editing-actions
            display inline-block 
            vertical-align baseline
            
    .b-checkbox .b-editing-actions
        display none
    
    .b-checkbox__label
        padding-left 12px
        
    .b-editing-actions__add-dropdown-holder
        float right

    .p-toggle-tree
        display inline-block
        position relative
        top 0px
        left -21px
        margin-right -5px
            
.b-rubricator__cell
    float left
    &:nth-child(1)
        width calc(62.5% + 40px)
    &:nth-child(2)
        float left
        padding-left 6px
        line-height 22px
        font-weight 700
        font-size 14px
        color #000
        width 19.5%
    &.m-rubricator__cell_empty
        font-weight 500
    &:nth-child(3)
        width 130px
        float left
        padding-left 5px
        .b-editing-actions
            margin 0
            width 120px
            position relative
        .b-editing-actions__item
            margin-left 5px
            float right
        .m-editing-actions__item_done
            float left
            margin 0
        .m-editing-actions__item_deactivate
            float left
            margin 0
            
.p-checkbox-tree-container > .p-parent-item > .p-inner-list
    display block !important    


    


