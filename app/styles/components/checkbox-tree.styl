.b-dropdown-tree
    max-height 550px
    
    li:not(.p-parent-item)
        .b-catalog-tree__text
            color #177a93
            font-weight 500
            font-size 13px

.b-dropdown-tree__root-item
    margin-left -17px
    margin-bottom 4px
    &:first-child
        margin-top 4px

.b-dropdown-tree__root-item.p-parent-item
    padding-left 20px
    & .b-catalog-tree__text
        font-size 13px
    .b-checkbox
        margin 4px 0

.m-catalog-tree__text_dropdown-tree_main  
    font-size 13px
    color #177a93
    margin-left 2px
    letter-spacing 0.2px
    
//////////////////////////////////////////
.b-select-tree
    position relative
    &__head
        border 1px solid #cccccc
        border-radius 5px
        padding-left 17px
        position relative
        cursor pointer
    &__text
        color #000
        font-size 13px
        font-weight 500
        line-height 34px
    &__icon
        width 31px
        position absolute
        right 0
        height 100%
        background #ccc
        top 0
        &:before
            height 0
            width 0
            position absolute
            top 1px
            right 9px
            bottom 0
            border-left 6px solid transparent
            border-right 6px solid transparent
            border-top 8px solid #000
            content ''
            margin auto 0
            
    &__content
        position absolute
        width 100%
        background #fff
        top 36px
        box-shadow 0 4px 8px rgba(0,0,0,0.15)
        padding 7px 0 6px 23px
        display none
        margin-bottom 10px
        z-index 100
        
