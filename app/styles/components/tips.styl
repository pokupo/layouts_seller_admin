.tooltip__default
    background #fff
    color #333
    
    .tooltip__content
        font-size 13px
        line-height 20px
        padding 10px 20px
        overflow hidden
        
        box-shadow 0 4px 7px rgba(#000, 0.25)
        
.tooltip__icon
    cursor help
    margin-left 4px

.tooltip__base
    padding 0
    font-size 0
    line-height 0
    position absolute
    left 0
    top 0
    z-index 9999
    pointer-events none
    width auto
    overflow visible
    .tooltip__content
        overflow hidden

.tooltip__arrow
    display block
    text-align center
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index -1

    span
    &-border
        display block
        width 0
        height 0
        position absolute

    &-top 
        &
        &-right
        &-left 
            span
                border-left 8px solid transparent !important
                border-right 8px solid transparent !important
                border-top 8px solid
                bottom -7px

        & 
        &-right
        &-left 
            .tooltip__arrow-border
                border-left 9px solid transparent !important
                border-right 9px solid transparent !important
                border-top 9px solid
                bottom -7px

    &-bottom 
        &
        &-right
        &-left 
            span
                border-left 8px solid transparent !important
                border-right 8px solid transparent !important
                border-bottom 8px solid
                top -7px
        & 
        &-right
        &-left 
            .tooltip__arrow-border
                border-left 9px solid transparent !important
                border-right 9px solid transparent !important
                border-bottom 9px solid
                top -7px

    &-top
    &-bottom 
        span
            left 0
            right 0
            margin 0 auto
        &-left
            span
                left 6px
            .tooltip__arrow-border
                left 5px
        &-right
            span
                right 6px
            .tooltip__arrow-border
                right 5px
                
        .tooltip__arrow-border
            left 0
            right 0
            margin 0 auto

    &-left 
        span
        .tooltip__arrow-border
            border-top 8px solid transparent !important
            border-bottom 8px solid transparent !important
            border-left 8px solid
            top 50%
            margin-top -7px
            right -7px

        .tooltip__arrow-border
            border-top 9px solid transparent !important
            border-bottom 9px solid transparent !important
            border-left 9px solid
            margin-top -8px

    &-right 
        span
        .tooltip__arrow-border
            border-top 8px solid transparent !important
            border-bottom 8px solid transparent !important
            border-right 8px solid
            top 50%
            margin-top -7px
            left -7px

        .tooltip__arrow-border
            border-top 9px solid transparent !important
            border-bottom 9px solid transparent !important
            border-right 9px solid
            margin-top -8px

.tooltip__close
    position absolute
    right 10px
    top 10px
    width 13px
    height 13px
    padding 3px
    cursor pointer
    centered-icon($icon--close--xs)

.tooltip__body
    padding-bottom 20px 
    overflow hidden
    
    h1
        font-size 24px
        line-height 40px
        margin-bottom 10px
        font-weight 100 
    p
        margin-bottom 1em
        line-height 20px
        font-size 13px
    
.tooltip__footer
    border-top 1px solid $grey
    clear both
    margin 10px -20px 0
    padding 10px 20px 10px
    
    ul
        padding 0
        text-align right
    
    li 
        display inline-block
        cursor pointer
        margin-right 20px 
        &:last-child
            margin-right 0
    
    a:not(.btn)
        color $a__link


/* Эффекты */
.tooltip
    &__fade
        opacity 0
        transition-property opacity

        &-show
            opacity 1

    &__grow
        transform scale(0,0)
        transition-property transform
        backface-visibility hidden

        &-show
            transform scale(1,1)
            transition-timing-function cubic-bezier(0.175, 0.885, 0.320, 1.15)

    &__swing
        opacity 0
        transform rotateZ(4deg)
        transition-property transform
        
        &-show
            opacity 1
            transform rotateZ(0deg)
            transition-timing-function cubic-bezier(0.230, 0.635, 0.495, 2.4)

    &__fall
        top 0
        transition-property top
        transition-timing-function cubic-bezier(0.175, 0.885, 0.320, 1.15)
        &.tooltip__fall-show
        &.tooltip__dying
            transition-property all
            top 0px !important
            opacity 0

    &__slide
        left -40px
        transition-property left
        transition-timing-function cubic-bezier(0.175, 0.885, 0.320, 1.15)
        &.tooltip__slide-show
        &.tooltip__dying
            transition-property all
            transition-property all
            left 0px !important
            opacity 0

    &__content-changing
        opacity 0.5
        transform scale(1.1, 1.1)
