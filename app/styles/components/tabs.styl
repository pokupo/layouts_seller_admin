.b-tabs
    margin 0 auto
    overflow visible
    &__inner
        border 1px solid #e3e0db
        padding 18px 22px 0 18px
        border-top none
        background #fff
    &__list
        display table
        width 100%
        table-layout fixed
    &__item
        display table-cell
        .pkp-tooltip_inline
            position relative
            top -5px
    &__btn-text
        font-size 30px
        color #177a93
        display inline-block
        margin-right 4px
        line-height 34px
        margin-bottom -1px
        position relative
        &:hover:after
            border-bottom none
        &:after
            pseudo()
            border-bottom 1px dotted #177a93
            top 100%
            width 100%
            left 0
    .m-tabs__btn-text_small
        font-size 20px
        font-weight 300
        line-height 26px
    
       
.p-tabs__btn
    display block
    padding 21px 18px 13px 18px
    background #efece7
    text-decoration none
    color #000000
    &_active
        background #fff
        color #655c89
        box-shadow: inset 1px 0 0 0 rgba(227,224,219,1), inset -1px 0 0 0 rgba(227,224,219,1);
        .b-tabs__btn-text
            color #000
            &:after
                border-bottom none

        
        
.p-tabs__container
    overflow visible
    position relative
