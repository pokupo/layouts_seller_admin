$adgreen = #97ce68

.close-video
	width 37px
	height 37px
	background #8C919B
	border-radius 37px 
	cursor pointer
	centered-icon($icon--video-close)

.vjs-pokupo-skin
	color #fff

	.vjs-big-play-button
		cursor pointer
		line-height 240px
		margin -120px 0 0 -120px
		opacity 1
		position absolute
		top 50%
		left 50%
		height 240px
		width 240px
		border-radius 240px
		border 8px solid #fff
		transition opacity, border-color 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)
		z-index 2
	
		&:before
			content ""
			position absolute
			display block
			top 50%
			left 50%
			border-color transparent transparent transparent #fff
			border-style solid
			margin -55px 0 0 -38px
			border 56px solid transparent
			border-width 56px 100px 56px
			transition opacity, border-color 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)

		&:hover
			border-color $adgreen
			&:before
				border-left-color $adgreen

		
	&.vjs-controls-disabled
	&.vjs-has-started
	&.vjs-using-native-controls 
		.vjs-big-play-button
			opacity 0
	
	.vjs-control-bar
		background #70747d
		height 80px
		opacity 0
		position absolute
		right 0
		bottom 0
		left 0
		z-index 2s
	
	&.vjs-has-started .vjs-control-bar
		opacity 1
		transition opacity 100ms cubic-bezier(0.455, 0.03, 0.515, 0.955)
	
	/*
	&.vjs-has-started.vjs-user-inactive.vjs-playing 
		.vjs-control-bar
		& + .close-video
			opacity 0
			transition opacity 1s cubic-bezier(0.455, 0.03, 0.515, 0.955)

	*/
	
	&.vjs-using-native-controls .vjs-control-bar, 
	&.vjs-controls-disabled .vjs-control-bar
		display none
	
	.vjs-progress-control
		position absolute
		top 0
		right 310px
		bottom 0
		left 75px
	
		.vjs-progress-holder
			cursor pointer
			height 20px
			margin-top -10px
			position absolute
			top 50%
			right 0
			left 0
		
			&:after
				background-color rgba(#fff, 0.15)
				content ""
				display block
				height 4px
				margin-top -2px
				position absolute
				top 50%
				right 0
				left 0
		
		.vjs-load-progress
		.vjs-play-progress
			height 4px
			margin-top -2px
			position absolute
			top 50%
			right 0
			left 0
		.vjs-play-progress
			background-color $adgreen
		.vjs-load-progress
			background-color rgba(#fff,1)
			.vjs-control-text
				display none

		.vjs-slider-handle
			display block
			position absolute
			width 10px
			height 10px
			border-radius 10px
			background $adgreen
			top 50%
			margin-top -5px

			.vjs-control-text
				display none

	.vjs-duration
		position absolute
		font-size 11px
		top 50%
		right 270px
		margin-top -6px
		color #ccc
		.vjs-control-text
			display none

		
	.vjs-play-control
		cursor pointer
		margin-top -15px
		position absolute
		top 50%
		left 30px
		height 30px
		width 30px
		border 2px solid $adgreen
		border-radius 30px
		transition background 0.1s cubic-bezier(0.455, 0.03, 0.515, 0.955)
	
		&:before
			content ""
			display block
			border-color transparent transparent transparent $adgreen
			border-style solid
			border-width 5px 8px
			position absolute
			top 50%
			left 50%
			margin -5px 0 0 -3px
		&:hover
			background $adgreen
			&:before
				border-left-color #000
			
		
	&.vjs-playing .vjs-play-control
		&:before
		&:after
			background-color $adgreen
			border none
			content ""
			display block
			height 10px
			position absolute
			top 50%
			left 50%
			width 1px
			margin -5px 0 0 -3px
	
		&:after
			margin-left 2px

		&:hover
			background $adgreen
			&:before
			&:after
				background #000
	
	.vjs-fullscreen-control
		border 3px solid #fff
		cursor pointer
		margin-top -7px
		position absolute
		top 50%
		display none
		right 190px
		height 14px
		width 22px
		&:hover
			border-color $adgreen
	
	&.vjs-fullscreen .vjs-fullscreen-control
		background transparent
		height 5px
		width 5px
		border-color #fff
		border-style solid
		border-width 6px 14px 3px 3px
		box-sizing content-box
		&:hover
			border-color $adgreen
		
	.vjs-volume-control
		cursor pointer
		margin-top -2px
		position absolute
		top 50%
		right 220px
		height 14px
		width 22px
		
	.vjs-volume-bar
		height 100%
		width 45px
		height 4px
		background #fff
		
	.vjs-volume-level
		background #79a553
		height 100%
	
	.vjs-current-time,
	.vjs-time-divider,
	.vjs-remaining-time,
	.vjs-play-progress .vjs-control-text,
	.vjs-play-control .vjs-control-content,
	.vjs-fullscreen-control .vjs-control-text,
	.vjs-volume-handle
		display none
		
.vjs-mute-control
	position absolute
	top 32px
	right 250px 
	width 10px
	height 16px
	background url($mute_image)
	background-position $mute_offset_x $mute_offset_y
	cursor pointer
	
.vjs-vol-0:after
	content ''
	position absolute
	top -4px
	left 4px
	width 1px
	height 24px
	background #ccc
	transform: rotate(45deg);
	
.vjs-vol-0:before
	content ''
	position absolute
	top -4px
	right 4px
	width 1px
	height 24px
	background #ccc
	transform: rotate(-45deg);
	
	

.vjs-control-text
	display none
.video-js
	background-color black
	padding 0
	position relative
	user-select none
	vertical-align middle

	.vjs-tech
		position absolute
		top 0
		left 0
		height 100%
		width 100%
	
	&:-moz-full-screen
		position absolute
	
	&.vjs-fullscreen
		position fixed
		overflow hidden
		z-index 1000
		left 0
		top 0
		bottom 0
		right 0
		width 100% !important
		height 100% !important
	
	&:-webkit-full-screen
		width 100% !important
		height 100% !important
	
	&.vjs-fullscreen.vjs-user-inactive
		cursor none
	

body.vjs-full-window
	height 100%
	margin 0
	overflow-y auto
	padding 0


.vjs-poster
	background-repeat no-repeat
	background-position 50% 50%
	background-size contain
	cursor pointer
	height 100%
	margin 0
	padding 0
	position relative
	width 100%

	img
		display block
		margin 0 auto
		max-height 100%
		padding 0
		width 100%
	
.video-js.vjs-using-native-controls .vjs-poster
		display none
	
.vjs-playback-rate,
.vjs-live-display
	display none
