.c3
  svg
    font 10px sans-serif
  text
    -webkit-user-select none
    -moz-user-select none
    user-select none

.c3 line,.c3 path
  fill none
  stroke #000

.c3-bars path,.c3-event-rect,.c3-legend-item-tile,.c3-xgrid-focus,.c3-ygrid
  shape-rendering crispEdges

.c3-chart-arc
  path
    stroke #fff
  text
    fill #3e424a
    font-size 13px
  .c3-gauge-value
    fill #000

.c3-grid
  line
    stroke #aaa
  text
    fill #aaa

.c3-xgrid,.c3-ygrid
  stroke-dasharray 3 3

.c3-text
  &.c3-empty
    fill gray
    font-size 2em

.c3-line
  stroke-width 1px

.c3-circle
  &._expanded_
    stroke-width 1px
    stroke #fff

.c3-selected-circle
  fill #fff
  stroke-width 2px

.c3-bar
  stroke-width 0
  &._expanded_
    fill-opacity .75

.c3-target
  &.c3-focused
    opacity 1
  &.c3-defocused
    opacity .3!important

.c3-target.c3-focused path.c3-line,.c3-target.c3-focused path.c3-step
  stroke-width 2px

.c3-region
  fill #4682b4
  fill-opacity .1

.c3-brush
  .extent
    fill-opacity .1

.c3-legend-item
  font-size 12px

.c3-legend-item-hidden
  opacity .15

.c3-legend-background
  opacity .75
  fill #fff
  stroke #d3d3d3
  stroke-width 1

.c3-tooltip-container
  z-index 10

.c3-tooltip
  border-collapse collapse
  border-spacing 0
  background-color #fff
  empty-cells show
  -webkit-box-shadow 7px 7px 12px -9px #777
  -moz-box-shadow 7px 7px 12px -9px #777
  box-shadow 7px 7px 12px -9px #777
  opacity .9
  tr
    border 1px solid #CCC
  th
    background-color #aaa
    font-size 14px
    padding 2px 5px
    text-align left
    color #FFF
  td
    font-size 13px
    padding 3px 6px
    background-color #fff
    border-left 1px dotted #999
    & > span
      display inline-block
      width 10px
      height 10px
      margin-right 6px
    &.value
      text-align right

.c3-area
  stroke-width 0
  opacity .3 !important

.c3-chart-arcs-title
  dominant-baseline middle
  font-size 1.3em

.c3-chart-arcs
  .c3-chart-arcs-background
    fill #e0e0e0
    stroke none
  .c3-chart-arcs-gauge-unit
    fill #000
    font-size 16px

.c3-chart-arcs .c3-chart-arcs-gauge-max,.c3-chart-arcs .c3-chart-arcs-gauge-min
  fill #777

// styling for full-width-graph
svg
    width 100%
    
.b-full-width-graph
    .c3-target-area-data2 .c3-lines-data2
        display none
        
    .c3-target-area-data2 .c3-shapes-data2 .c3-circle
        display none
    
    .c3-target-line-data1 .c3-lines .c3-line
        stroke rgba(77,187,236,1)
        stroke-width: 3px
    
    .c3-shape.c3-circle
     fill url(#grad1) !important

    /*.c3-target-line-data1 .c3-shape*/
        
    .c3-xgrid, .c3-ygrid
        stroke-dasharray 1
        
    .c3-grid line
        stroke #efece7
    
    .c3-axis-y .tick line, .c3-axis-x .tick line
        display: none;
    
    //tooltips+
        .c3-tooltip-container
            padding 5px 10px 9px 10px
            background #4c4c4c
            opacity 1
            position relative
            color #fff
            &:after
                content ''
                display block
                width 0
                height 0
                border-style solid
                border-width 10px 10px 0 10px
                border-color #4c4c4c transparent transparent transparent
                position absolute
                left 50%
                margin-left -10px
                top 100%
        .c3-tooltip-container_last:after
            right 10px
            left auto
        
        .c3-tooltip
            box-shadow none
            opacity 1
            
        .c3-tooltip th
            background #4c4c4c
            font-size 12px
            font-family $font
            letter-spacing .7px
            line-height 16px
            text-align center
            white-space nowrap
            
        .c3-tooltip th:first-letter
            text-transform uppercase
            
        .c3-tooltip tr
            border none
            
        .c3-tooltip td
            border none
            background #4c4c4c
            font-size 12px
            font-family $font
            letter-spacing .7px
            line-height 17px
            padding 0
            text-align center
            
        .c3-tooltip__top:first-letter
            text-transform uppercase

//styling for donut graph
    .b-donut-graph 
        .labels__label 
            font-size 13px
            color #3e424a
    
        .labels__value
            font-size 20px
            color #3e424a

        svg
            width 100%
            height 300px

        text
            color #3e424a

        path.slice
            stroke-width 2px

        polyline
            opacity .5
            stroke #3e424a
            stroke-width 1px
            fill none
  
.c3-chart-arc:nth-child(2) text
  fill #fff