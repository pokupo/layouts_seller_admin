.datepick
  background-color #fff
  color #000
  border 1px solid #444
  border-radius 0.25em
  -moz-border-radius 0.25em
  -webkit-border-radius 0.25em
  font-family Arial,Helvetica,Sans-serif
  font-size 90%
  a
    color #fff
    text-decoration none
    &.datepick-disabled
      color #888
      cursor auto
  button
    margin 0.25em
    padding 0.125em 0em
    background-color #fcc
    border none
    border-radius 0.25em
    -moz-border-radius 0.25em
    -webkit-border-radius 0.25em
    font-weight bold

.datepick-rtl
  direction rtl

.datepick-popup
  z-index 1000

.datepick-disable
  position absolute
  z-index 100
  background-color white
  opacity 0.5
.datepick-nav, .datepick-ctrl
  float left
  width 100%
  background-color #000
  color #fff
  font-size 90%
  font-weight bold

.datepick-ctrl
  background-color #600
  .datepick-cmd
    &:hover
      background-color #f08080

.datepick-cmd
  width 30%
  &:hover
    background-color #777

.datepick-cmd-prevJump, .datepick-cmd-nextJump
  width 8%

a
  &.datepick-cmd
    height 1.5em

button
  &.datepick-cmd
    text-align center

.datepick-cmd-prev, .datepick-cmd-prevJump, .datepick-cmd-clear
  float left
  padding-left 2%

.datepick-cmd-current, .datepick-cmd-today
  float left
  width 35%
  text-align center

.datepick-cmd-next, .datepick-cmd-nextJump, .datepick-cmd-close
  float right
  padding-right 2%
  text-align right

.datepick-rtl .datepick-cmd-prev, .datepick-rtl .datepick-cmd-prevJump,
.datepick-rtl .datepick-cmd-clear
  float right
  padding-left 0%
  padding-right 2%
  text-align right

.datepick-rtl .datepick-cmd-current, .datepick-rtl .datepick-cmd-today
  float right

.datepick-rtl .datepick-cmd-next, .datepick-rtl .datepick-cmd-nextJump,
.datepick-rtl .datepick-cmd-close
  float left
  padding-left 2%
  padding-right 0%
  text-align left

.datepick-month-nav
  float left
  background-color #777
  text-align center
  div
    float left
    width 12.5%
    margin 1%
    padding 1%
  span
    color #888

.datepick-month-row
  clear left

.datepick-month
  float left
  width 15em
  border 1px solid #444
  text-align center
  table
    width 100%
    border-collapse collapse
  thead
    border-bottom 1px solid #aaa
  th
    border 1px solid #777
    &.datepick-week
      background-color #777
      color #fff
  td
    background-color #eee
    border 1px solid #aaa
    &.datepick-week
      border 1px solid #777
      *
        background-color #777
        color #fff
        border none
    span
      color #888
    .datepick-other-month
      background-color #fff
    .datepick-weekend
      background-color #ddd
    .datepick-today
      background-color #f0c0c0
    .datepick-highlight
      background-color #97ce68
    .datepick-selected
      background-color #777
      color #fff
  a
    display block
    width 100%
    padding 0.125em 0em
    background-color #eee
    color #000
    text-decoration none
  span
    display block
    width 100%
    padding 0.125em 0em

.datepick-month-header, .datepick-month-header select, .datepick-month-header input
  height 1.5em
  background-color #444
  color #fff
  font-weight bold

.datepick-month-header select, .datepick-month-header input
  height 1.4em
  margin 0em
  padding 0em
  border none
  font-size 100%

.datepick-month-header
  input
    position absolute
    display none

.datepick-month th, .datepick-month td
  margin 0em
  padding 0em
  font-weight normal
  text-align center

.datepick-month th, .datepick-month th a
  background-color #777
  color #fff

.datepick-status
  clear both
  background-color #ddd
  text-align center

.datepick-clear-fix
  clear both

/* range dates input custom */
.datepick
    width 180px !important
    border none
    padding 0 13px 10px 13px
    box-shadow 0px 2px 5px 0px rgba(0,0,0,0.2)
    margin-top 1px
.datepick-month
    border none
    margin-top 20px
    thead
        border-bottom 1px solid #cccccc
    table
        width 154px
        th
            span
                line-height 20px
    td
        width 20px
        height 20px
        border none
        background-color #fff
        line-height 20px
        .datepick-weekend
            background-color #fff
            color #ff6766
            &:hover
                background-color #97ce68
        .datepick-today
            background-color #97ce68
        .datepick-other-month
            color #cccccc
.datepick-nav 
    background-color #fff
    position relative
    
    .datepick-cmd-today
        display none
        
    a.datepick-cmd
        height 9px
        position absolute
        top 20px
    a.datepick-cmd:hover
        background-color #fff
        
    .datepick-cmd-next
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 4.5px 0 4.5px 5px;
        border-color: transparent transparent transparent #dddddd;
        right 0
        &:hover
            border-color: transparent transparent transparent #979797;
    
    .datepick-cmd-prev
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 4.5px 5px 4.5px 0;
        border-color: transparent #dddddd transparent transparent;
        &:hover
            border-color: transparent #979797 transparent transparent;
        

.datepick-month-header
    background-color #fff
    color #010101
    font-size 11px
    font-weight normal
    .datepick-month-year
        background-color #fff
        font-size 11px
        color #010101

.datepick-month thead th
    background-color #fff
    border none
    font-size 11px
    color #010101 

.datepick-month a
  width 20px
  height 20px
  display block
  background-color #fff
  padding 0

.datepick-ctrl
    display none