//b-code-settings
    .b-code-settings
        .b-pkp-block
            padding-bottom 0
    .b-code-settings__left
        width 50%
        float left
        padding-right 10px
        .b-checkbox__label,.b-radio__label
            float left
            clear both
    .b-code-settings__right
        width 50%
        padding-left 10px
        float right
        .b-checkbox__label,.b-radio__label
            float left
            clear both
            
//b-shop-preview
    .b-shop-preview
        .b-block-title__heading
            padding-bottom 0
            padding-top 33px
            
    .b-shop-preview__view-shop
        border 1px solid #ddd8d0
        border-radius 5px 
        color #000
        font-size 14px
        font-weight 600
        text-decoration none
        text-transform uppercase
        padding 17px 20px 17px 46px
        display block
        letter-spacing 0.4px
        position relative
        &:before
            pseudo()
            left 19px
            top 13px
            background-icon($new-window)
            
    .b-shop-preview__window
        height 500px
        position relative
    
    .b-shop-preview__window-overlay
        position absolute
        width 100%
        height 100%
        background rgba(0,0,0,.4)
        
    .b-shop-preview__loader
        width 84px 
        height 84px
        background #fff
        border-radius 5px
        top 50%
        left 50%
        position absolute
        margin-top -27px
        margin-left -27px
        padding 26px

        
//b-codes
    .b-codes
        .b-pkp-block
            padding-top 25px
            

.b-shop-success-install
    display inline-block
    background transparent
    text-transform uppercase
    border-radius 5px 
    color #7caa1f
    font-size 14px
    font-weight 600
    margin-left 31px
    letter-spacing .4px
    padding 17px 19px 17px 49px
    position relative
    &:before
        pseudo()
        background-icon($activity-btn_done)
        left 20px
        top 15px