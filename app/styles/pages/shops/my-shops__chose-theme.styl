//THEME CHOSEN
    .b-themes
        margin 10px 0 -13px 0
        
    .b-theme
        width 300px
        height 250px
        display inline-block
        border 4px solid #efece7
        background #efece7
        box-shadow 0px 1px 0px 0px rgba(185,185,185,1), 0 1px 0 1px rgba(230,230,230,1)
        border-radius 2px
        position relative
        margin-bottom 20px
        margin-right 32px
        &:hover
            .b-theme__overlay
                opacity 1
    
    .b-theme__overlay
        background rgba(0,0,0,.4);
        position absolute
        top 0
        height 100%
        opacity 0
        width 100%
        transition all .5s
        
    .b-theme__zoom
        border-radius 5px
        cursor pointer
        width 40px
        height 40px
        position absolute
        bottom 10px
        right 10px
        border 1px solid #ffffff
        transition all .2s
        centered-icon($theme-search)
        &:hover
            background #ebe8e3
            centered-icon($theme-search_hover)