//shipping methods
    .b-shipping-methods__table
        width 100%
        margin-top 5px
        table-layout fixed
        thead
            border-right 1px solid #ebe8e3
            th
                font-size 13px
                color #333333
                line-height 50px
                font-weight 700
                background #ebe8e3
                text-align left
                &:first-child
                    padding-left 20px
                    width 180px
                &:nth-child(2)
                    width 185px
                &:nth-child(3)
                    width 335px
                &:nth-child(4)
                    width 168px
                    padding-left 17px
                &:last-child
                    padding-right 20px
                    width 100px
        tbody
            tr
                border 1px solid #d4d4d4
            td
                font-size 13px
                line-height 20px
                color #000
                padding 20px 0 15px 0
                &:first-child
                    text-align center
                    padding-right 22px
                &:nth-child(2)
                    padding-right 20px
                &:nth-child(3)
                    padding-right 20px
                &:nth-child(4)
                    padding-left 17px
                    
//add delivery method popup
    
    .b-add-delivery-method__table
        width 100%
        thead
            tr
                border-right 1px solid #ebe8e3
            th
                background #ebe8e3
                line-height 17px
                font-size 13px
                font-weight 700
                text-align left
                color #333333
                padding 10px 0
                &:first-child
                    padding-left 22px
                    width 185px
                &:nth-child(2)
                    width 190px
                &:nth-child(3)
                    width 205px
                &:nth-child(4)
                    width 134px
                    
        tbody
            tr
                border 1px solid #d4d4d4
            td
                padding 10px 0
                font-size 13px
                line-height 20px
                color #010101
                &:first-child
                    text-align center
                    padding-right 19px
                    padding-top 19px
                    padding-bottom 14px
                    height 120px
                &:nth-child(3)
                    a
                        color #177a93
                        letter-spacing 0.3px
                        &:hover
                            text-decoration none
                

