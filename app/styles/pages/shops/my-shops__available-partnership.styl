.b-available-partnership
    .b-pkp-block
        padding-bottom 37px
        
.b-available-partnership__table
    width 100%
    table-layout fixed
    margin 6px 0 24px 0
    thead
        th
            font-size 13px
            color #333
            line-height 50px
            font-weight 700
            background #ebe8e3
            text-align left
            &:nth-child(1)
                width 52px
            &:nth-child(2)
                width 135px
            &:nth-child(3)
                width 302px
            &:nth-child(4)
                width 210px
            &:nth-child(5)
                width 132px
            &:nth-child(6)
                width 75px
            &:nth-child(7)
                width 50px
    tbody
        tr
            border 1px solid #d4d4d4
        td
            height 120px
            &:nth-child(1)
                padding-left 20px
            &:nth-child(2)  
                text-align center
                padding 0 20px 0 0
            &:nth-child(3)
                padding-right 20px
                a
                    display block
                    color #177a93
                    font-size 13px
                    font-weight 700
                    letter-spacing 0.2px
                p
                    line-height 16px
                    color #000000
                    font-size 13px
            &:nth-child(5)
                strong
                    color #000
                    font-size 13px
                    font-weight 700
            &:nth-child(6)
                strong
                    color #000
                    font-size 13px
                    font-weight 700

                
.b-available-partnership__date
    color #333
    font-size 13px
    display block
    line-height 16px

.b-available-partnership__raiting
    line-height 16px
    font-size 13px
    display block
    color #333
    
.b-available-partnership__raiting-mark
    color #000
    font-size 13px
    font-weight 700

.m-available-partnership__raiting-mark_positive
    color #7caa1f
    
.b-available-partnership__reviews
    line-height 16px
    font-size 13px
    display block
    color #333
    strong
        color #000
        font-size 13px
        font-weight 700
        margin 0 2px
        
    .b-available-partnership__reviews-positive
        color #7caa1f
        margin-left 6px
    .b-available-partnership__reviews-negative
        color #c64c1b
                