//product-reviews
    .b-reviews
        margin-bottom 20px
    .b-reviews__list
        margin-top 15px
       
    .b-reviews__item
        border 1px solid #d4d4d4
        min-height 91px
        border-bottom none
        padding 15px 14px 13px 19px
        cursor pointer
        &:last-child
            border-bottom 1px solid #d4d4d4 
    .b-reviews__avatar
        display inline-block
        margin-right 18px
        position relative
        centered-icon($avatar)
        &:hover
            centered-icon($avatar_hover)
            .b-reviews__avatar-img-holder
                border 3px solid #7caa1f
            
    .b-reviews__avatar-img-holder
        width 60px
        height 60px
        border 3px solid #474b53 
        border-radius 999px
        position relative
        z-index 2
        a
            display block
            height 100%
        img
            max-width 100%
            
    .m-reviews__avatar-img-holder_true
        border-color #f0ede9

    .b-reviews__info
        display inline-block
        vertical-align top
        margin-top 10px
        width 240px
        padding-right 10px
        a
            display block
            margin-top 3px
            letter-spacing 0.15px
    .b-reviews__info-name
        font-size 13px
        line-height 20px
        color #000
        display inline-block
        font-weight 700
        
    .b-reviews__info-date
        color #999999
        font-size 12px
        line-height 20px
        &:before
            content '|'
            display inline-block
            margin 0 4px

    .b-reviews__rate
        display inline-block
        margin 17px 0 0 0
        vertical-align top

    .b-reviews__message
        float right
        padding 11px 0 10px 10px

    .b-reviews__comment
        background #efece7
        color #000
        font-size 13px
        margin 5px 60px 7px
        padding 15px 18px
        letter-spacing 0.3px
        line-height 20px
        border-radius 5px
        position relative
        min-height 70px
        &:before
            content ''
            position absolute
            top 22px
            right 100%
            width 26px
            height  26px
            background-image: url('data:image/png;base64,')
